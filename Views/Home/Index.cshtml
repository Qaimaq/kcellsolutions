@{
    ViewData["Title"] = "Kсell Solutions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@using Microsoft.Extensions.Localization
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@inject IOptions<RequestLocalizationOptions> LocOptions
@using Microsoft.AspNetCore.Mvc.Localization

@{
    var culture = Context.Features.Get<IRequestCultureFeature>
        ().RequestCulture.Culture.TwoLetterISOLanguageName;
}

@using Microsoft.AspNetCore.Routing.Constraints;

@inject IViewLocalizer Localizer
<!-- HOME -->
<section id="home" class="padbot0">
    <!-- TOP SLIDER -->
    <div class="flexslider top_slider">
        <ul class="slides">
            <li class="slide1">
                <div class="flex_caption1">
                    <p class="title1 captionDelay2 FromTop">Kcell </p>
                    <p class="title2 captionDelay4 FromTop">Solutions </p>
                    <p class="title4 captionDelay8 FromBottom">Прагматичные IT решения для вашего бизнеса.</p>
                </div>
                <a class="slide_btn FromRight" asp-area="" asp-action="About" asp-route-culture="@culture">Подробнее</a>
            <li class="slide2">
                <div class="flex_caption1">
                    <p class="title1 captionDelay2 FromTop">Kcell </p>
                    <p class="title2 captionDelay4 FromTop">Solutions </p>
                    <p class="title4 captionDelay8 FromLeft">Мы поставляем программное обеспечение от мировых производителей и лидеров в своей сфере</p>
                </div>
                <a class="slide_btn FromRight" asp-area="" asp-action="Contacts" asp-route-culture="@culture">Контакты</a>
            </li>
        </ul>
        <!-- VIDEO BACKGROUND -->
        <a name="P2" class="player" id="P2" data-property="{videoURL:'HDOjxwjqCxI',containment:'.top_slider',autoPlay:true, mute:true, startAt:0, opacity:1}"></a>
        <!-- //VIDEO BACKGROUND -->
    </div><!-- //TOP SLIDER -->
</section><!-- //HOME -->
<!-- ABOUT -->
<section id="about">
    <div class="row row-space-1 margin-b-2 wow fadeInDown animated" style="visibility:visible; animation-name: fadeInDown;">
        <h3 class="color-red" style="text-align: center;">Добро пожаловать в Kcell Solutions</h3>
        <hr style="margin-top:0;" />
        <div class="col-sm-10 col-sm-offset-1">
            <p class="margin-b-40 text-center wow fadeInDown animated fweight-400" style="visibility:visible; animation-name: fadeInDown;text-align:center;font-size:16px;">
                Kcell Solutions предлагает прагматичные  IT решения для вашего бизнеса в сфере поставок программного обеспечения, управления транспортными парками, и организации массовых sms рассылкок.
                <br><br>
                Kcell Solutions основана в 2017 году и базируется в Алматы.
            </p>
        </div>
    </div>
</section><!-- //ABOUT -->
<!-- ABOUT -->
<section id="about">
    <!-- SERVICES -->
    <div class="services_block padbot40" data-appear-top-offset="-200" data-animated="fadeInUp">
        <!-- CONTAINER -->
        <div class="container">
            <!-- ROW -->
